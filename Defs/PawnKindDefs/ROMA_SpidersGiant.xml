<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--
  ==========================================================
                        GIANT SPIDERS
  ==========================================================
  -->

    <ThingDef ParentName="ROMA_BaseArachnid">
        <defName>ROMA_SpiderRaceGiant</defName>
        <label>giant spider</label>
        <description>This monstrous muffalo-sized genetically-engineered predator features eight legs, a hard shell, and a venomous bite.</description>
        <thingClass>Arachnophobia.PawnWebSpinner</thingClass>
        <statBases>
            <ComfyTemperatureMin>-20</ComfyTemperatureMin>
            <MarketValue>700</MarketValue>
            <MoveSpeed>5.0</MoveSpeed>
            <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
            <LeatherAmount>10</LeatherAmount>
            <Flammability>3.0</Flammability>
        </statBases>
        <tools>
            <li>
                <label>fangs</label>
                <capacities>
                    <li>ROMA_Sting</li>
                </capacities>
                <power>20</power>
                <cooldownTime>1.8</cooldownTime>
                <linkedBodyPartsGroup>Mouth</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>22</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>front left leg</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>19</power>
                <cooldownTime>1.65</cooldownTime>
                <chanceFactor>0.7</chanceFactor>
                <linkedBodyPartsGroup>FrontLeftLeg</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>front right leg</label>
                <capacities>
                    <li>Blunt</li>
                    <li>Poke</li>
                </capacities>
                <power>19</power>
                <cooldownTime>1.65</cooldownTime>
                <chanceFactor>0.7</chanceFactor>
                <linkedBodyPartsGroup>FrontRightLeg</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
        </tools>
        <comps>
            <li Class="CompProperties_Milkable">
                <milkDef>ROM_SpiderSilk</milkDef>
                <milkIntervalDays>2</milkIntervalDays>
                <milkAmount>12</milkAmount>
            </li>
            <li Class="CompProperties_EggLayer">
                <eggFertilizedDef>ROMA_SpiderEggGiant</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>22</eggLayIntervalDays>
                <eggProgressUnfertilizedMax>0.5</eggProgressUnfertilizedMax>
                <eggCountRange>1</eggCountRange>
            </li>
        </comps>
        <race>
            <body>ROMA_SpiderBody</body>
            <thinkTreeMain>ROM_SpiderThinkTree</thinkTreeMain>
            <foodType>CarnivoreAnimal, Kibble, Fluid</foodType>
            <predator>true</predator>
            <manhunterOnDamageChance>0.35</manhunterOnDamageChance>
            <baseBodySize>2.1</baseBodySize>
            <baseHealthScale>1.75</baseHealthScale>
            <baseHungerRate>0.85</baseHungerRate>
            <meatLabel>arachnid meat</meatLabel>
            <mateMtbHours>8</mateMtbHours>
            <leatherDef>ROMA_Leather_SpiderGiant</leatherDef>
            <!--
      <leatherColor>(120,120,120)</leatherColor>
      <leatherInsulation>1</leatherInsulation>
      <leatherCommonalityFactor>0.1</leatherCommonalityFactor>
      <leatherMarketValueFactor>5</leatherMarketValueFactor>
      <leatherLabel>arachnid chitin</leatherLabel>
      <leatherStatFactors>
        <ArmorRating_Blunt>1.3</ArmorRating_Blunt>
        <ArmorRating_Sharp>1.1</ArmorRating_Sharp>
        <ArmorRating_Heat>-2.0</ArmorRating_Heat>
      </leatherStatFactors>
      -->
            <trainability>Advanced</trainability>
            <wildness>0.75</wildness>
            <wildBiomes>
                <!-- Moderate Climates -->
                <TemperateForest>0.09</TemperateForest>
                <TropicalRainforest>0.09</TropicalRainforest>
                <!-- Arid Climates -->
                <AridShrubland>0.04</AridShrubland>
                <Desert>0.09</Desert>
                <ExtremeDesert>0.02</ExtremeDesert>
                <!-- Cold Biomes -->
                <ColdBog>0.12</ColdBog>
                <BorealForest>0.05</BorealForest>
                <Tundra>0.027</Tundra>
                <IceSheet>0</IceSheet>
                <SeaIce>0</SeaIce>
            </wildBiomes>
            <lifeExpectancy>20</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>EusocialInsectLarva</def>
                    <minAge>0</minAge>
                </li>
                <li>
                    <def>EusocialInsectJuvenile</def>
                    <minAge>0.03</minAge>
                </li>
                <li>
                    <def>ROMA_SpiderAdult</def>
                    <minAge>0.4</minAge>
                    <soundWounded>Pawn_Megascarab_Wounded</soundWounded>
                    <soundDeath>Pawn_Megascarab_Death</soundDeath>
                    <soundCall>Pawn_Megascarab_Call</soundCall>
                    <soundAngry>Pawn_Megascarab_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>Insectoid</li>
        </tradeTags>
    </ThingDef>

    <PawnKindDef>
        <defName>ROMA_SpiderKindGiant</defName>
        <label>giant spider</label>
        <race>ROMA_SpiderRaceGiant</race>
        <combatPower>160</combatPower>
        <lifeStages>
            <li>
                <label>giant spiderling</label>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/Spider/ROM_Spider</texPath>
                    <drawSize>1.3</drawSize>
                    <color>(120,120,120)</color>
                </bodyGraphicData>
            </li>
            <li>
                <label>juvenile giant spider</label>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/Spider/ROM_Spider</texPath>
                    <drawSize>1.7</drawSize>
                    <color>(120,120,120)</color>
                </bodyGraphicData>
            </li>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Pawn/Animal/Spider/ROM_Spider</texPath>
                    <drawSize>2.0</drawSize>
                    <color>(120,120,120)</color>
                    <shadowData>
                        <volume>(0.3, 0.4, 0.3)</volume>
                        <offset>(0,0,-0.05)</offset>
                    </shadowData>
                </bodyGraphicData>
                <femaleGraphicData>
                    <color>(150,150,150)</color>
                    <texPath>Things/Pawn/Animal/Spider/ROM_Spider</texPath>
                    <drawSize>2.5</drawSize>
                </femaleGraphicData>
            </li>
        </lifeStages>
    </PawnKindDef>

</Defs>